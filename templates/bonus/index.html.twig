{% extends 'base_module.html.twig' %}

{% block title %}
    {{title|trans|capitalize}}
{% endblock  %}
{% block page_title %}
    {{ title|trans|capitalize }}
{% endblock %}

{% block page_content %}
    {{ form_start(form) }}
        {{ form_widget(form.text) }}
        {% if result %}
            <div>
                <p class="mt-2 mb-2" style="font-size: 20px;">
                    Résultat : <strong>{{ result }}</strong>
                </p>
            </div>
        {% endif %}
    <div>
        <button class="btn btn-primary mt-2 me-2">Valider</button>
        <a class="btn btn-danger mt-2" href="{{ path('bonus') }}">Réinitialiser</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
